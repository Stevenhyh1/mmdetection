// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Tracking",
	"build": {
		"context": "${localWorkspaceFolder}",
		"dockerfile": "${localWorkspaceFolder}/docker/Dockerfile"
	},
	"runArgs": [
		"--network=host",
		"--privileged=true",
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined",
		"--gpus=all",
		"--ipc=host"
	],
	"updateRemoteUserUID": false,
	"remoteEnv": {
		"PYTHONPATH": "${containerEnv:PATH}:${localWorkspaceFolder}",
		"NCCL_DEBUG": "INFO",
		"TORCH_DISTRIBUTED_DEBUG": "DETAIL"
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspace/mmdet,type=bind",
	"workspaceFolder": "/workspace/mmdet",
	"mounts": [
		"source=/mnt/data/,target=/data,type=bind,consistency=cached"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-vscode-remote.remote-containers",
				"streetsidesoftware.code-spell-checker",
				"ms-python.black-formatter",
				"ms-toolsai.jupyter",
				"ms-python.pylint",
				"njpwerner.autodocstring"
			],
			"settings": {
				"remote.localPortHost": "allInterfaces",
				"pylint.args": [
					"--generated-members=numpy.* ,torch.*"
				]
			}
		}
	}
}